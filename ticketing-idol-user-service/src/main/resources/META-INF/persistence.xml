<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             version="3.0">
    <persistence-unit name="user-service">
        <provider>org.hibernate.reactive.provider.ReactivePersistenceProvider</provider>

        <class>com.external.ticketingidoluserservice.domain.model.User</class>
        <class>com.external.ticketingidoluserservice.domain.model.Organizer</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5433/ticketing_user"/>
            <property name="jakarta.persistence.jdbc.user" value="user_service"/>
            <property name="jakarta.persistence.jdbc.password" value="secret"/>

            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>